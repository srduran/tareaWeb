<p id="notice" class="alert alert-success"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-striped table-hover table-categories">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td class="table-buttons">
          <%= link_to 'Show', category , :class => 'btn btn-default btn-sm'%>
          <%= link_to 'Edit', edit_category_path(category), :class => 'btn btn-default btn-sm' %>
          <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, :class => 'btn btn-default btn-sm' %>
