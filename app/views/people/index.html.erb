<% if notice %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1>People</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.email %></td>
        <td><%= person.password %></td>
        <td><%= link_to 'Show', person, :class => 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Edit', edit_person_path(person), :class => 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


