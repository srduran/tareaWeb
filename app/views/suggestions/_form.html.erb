<%= form_for([@document, suggestion]) do |f| %>
  <% if suggestion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(suggestion.errors.count, "error") %> prohibited this suggestion from being saved:</h2>

      <ul>
      <% suggestion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text %>
    <%= f.hidden_field :document_id, value: @document.id %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, options_for_select(Suggestion::STATUS_OPTIONS) %>
  </div>

  <div class="actions">
    <%= f.submit "Submit Suggestion" , :class => 'btn btn-success btn-sm' %>
  </div>
<% end %>
