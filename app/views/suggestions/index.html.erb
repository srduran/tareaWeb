<p id="notice"><%= notice %></p>

<h1>Suggestions</h1>
<div class="search-bar">
  <%= form_tag(document_suggestions_url, :method => "get", id: "search-form") do %>
      <%= select_tag :search, options_for_select(["All", Suggestion::STATUS_OPTIONS[0], Suggestion::STATUS_OPTIONS[1], Suggestion::STATUS_OPTIONS[2]]) %>
      <%= submit_tag "Search", :name => nil, :class => 'btn btn-default btn-sm' %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>Document</th>
      <th>Person</th>
      <th>Text</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.document %></td>
        <td><%= suggestion.person %></td>
        <td><%= suggestion.text %></td>
        <td><%= suggestion.status %></td>
        <td><%= link_to 'Show', [@document,suggestion] %></td>
        <td><%= link_to 'Edit', edit_document_suggestion_path(id: suggestion.id) %></td>
        <td><%= link_to 'Destroy', [@document, suggestion], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggestion', new_document_suggestion_path(document_id: @document.id) %>
