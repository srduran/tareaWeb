<% if notice %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<p>
  <strong>Document:</strong>
  <%= @suggestion.document %>
</p>
<p>
  <strong>Person:</strong>
  <%= @suggestion.person %>
</p>
<p>
  <strong>Status:</strong>
  <%= @suggestion.status %>
</p>

<p>
  <blockquote class="suggestion-block">
    <%= @suggestion.text %>
  </blockquote>
</p>

<%if @is_author%>
<%= link_to 'Edit', edit_document_suggestion_path(@suggestion), :class => 'btn btn-default btn-sm' %> |
<%end%>
<%= link_to 'Back', document_suggestions_path, :class => 'btn btn-danger btn-sm' %>

<p>
  <%= render 'comments/index', suggestion: @suggestion %>
</p>


